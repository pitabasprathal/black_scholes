<div class="login-box-body">
	<h2>Resend confirmation instructions</h2>

	<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
	  </div>

	  <div class="actions">
	     <%= f.button :submit ,"Resend confirmation" ,:class=>"btn btn-primary btn-block btn-flat"%>
	  </div>
	<% end %>

	<%= render "users/shared/links" %>
</div>