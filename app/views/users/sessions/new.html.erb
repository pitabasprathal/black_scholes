<div class="login-box-body">
  <p class="login-box-msg">Sign in to start your session</p>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group has-feedback">
      <%= f.input :email, class: 'form-control', autofocus: true ,:placeholder=>"Email"%>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.input :password, class: 'form-control', autocomplete: 'off' ,:placeholder=>"Password"%>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <div class="checkbox icheck" style="    margin-left: 21px;">
          <label>
            <input type="checkbox"> Remember Me
          </label>
        </div>
      </div><!-- /.col -->
      <div class="col-xs-4">
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block btn-flat' %>

      </div><!-- /.col -->
    </div>

  <% end %>
  <%= render "users/shared/links" %>
</div>