<div class="login-box-body">
  <p class="login-box-msg">Sign up to start your session</p>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group has-feedback">
      <%= f.input :email, class: 'form-control', autofocus: true ,:placeholder=>"Email"%>
    </div>

    <div class="form-group has-feedback">
      <%= f.input :password, class: 'form-control', autocomplete: 'off',:placeholder=>"Password" %>
    </div>
    <div class="form-group has-feedback">
      <%= f.input :password_confirmation, class: 'form-control', autocomplete: 'off' ,:placeholder=>"Password Confirmation"%>
    </div>
    <div class="row">
      <div class="col-xs-8">
    
      </div><!-- /.col -->
      <div class="col-xs-4">
        <%= f.submit 'Sign Up', class: 'btn btn-primary btn-block btn-flat' %>
      </div><!-- /.col -->
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>